---
interface Props {
  narrow?: boolean;
  class?: string;
}

const { narrow = false, class: className = "" } = Astro.props;
---

<div class:list={[
  "container mx-auto px-4",
  "pt-4 md:pt-6 lg:pt-8",
  "pb-8 md:pb-12 lg:pb-16",
  className
]}>
  <div class:list={[
    narrow ? "max-w-3xl" : "w-full" 
  ]}>
    <slot />
  </div>
</div>