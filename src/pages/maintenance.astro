                    </div>
                    <div>
                        <label for="g1-phone" class="block text-sm font-bold text-gray-700 mb-1">Phone Number *</label>
                        <input type="tel" id="g1-phone" name="phone" required class="w-full px-4 py-2 border border-gray-300 rounded focus:ring-2 focus:ring-[var(--color-schiketanz-red)] outline-none" />
                    </div>
                </div>

                <div>
                    <label for="g1-email" class="block text-sm font-bold text-gray-700 mb-1">Email Address *</label>
                    <input type="email" id="g1-email" name="email" required class="w-full px-4 py-2 border border-gray-300 rounded focus:ring-2 focus:ring-[var(--color-schiketanz-red)] outline-none" />
                </div>

