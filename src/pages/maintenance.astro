                <p class="hidden"><label>Bot: <input name="bot-field" /></label></p>

                <!-- We inject the building name here automatically via JS -->
                <input type="hidden" name="building_name" class="selected-building-input" />
                <input type="hidden" name="subject" value="New Group 2 Maintenance Request" />

                <!-- FORM FIELDS (Group 2) -->
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div>
                        <label for="g2-fullName" class="block text-sm font-bold text-gray-700 mb-1">Full Name *</label>
                        <input type="text" id="g2-fullName" name="fullName" required class="w-full px-4 py-2 border border-gray-300 rounded focus:ring-2 focus:ring-[var(--color-schiketanz-red)] outline-none" />
                    </div>
                    <div>
                        <label for="g2-phone" class="block text-sm font-bold text-gray-700 mb-1">Phone Number *</label>
