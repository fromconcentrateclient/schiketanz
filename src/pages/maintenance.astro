                </div>
            </form>


            <!-- ============================================== -->
            <!-- FORM B: GROUP 2 (Hidden by default)            -->
            <!-- ============================================== -->
            <form 
                id="form-group-2"
                name="maintenance-group-2" 
                method="POST" 
                data-netlify="true" 
                netlify-honeypot="bot-field"
                enctype="multipart/form-data"
                action="/success"
                class="space-y-6 hidden animate-fade-in"
            >
                <div class="bg-green-50 border-l-4 border-green-600 p-3 mb-6">
                    <p class="text-sm text-green-900 font-bold">Routing to: Maintenance Group 2</p>
                </div>

                <!-- Netlify Required Hidden Fields -->
