            <div class="relative">
                <select id="building-selector" class="w-full p-4 text-lg border-2 border-gray-300 rounded focus:border-[var(--color-schiketanz-red)] outline-none bg-white cursor-pointer">
                    <option value="" disabled selected>-- Choose Building --</option>
                    {buildings.map(b => (
                        <option value={b.name} data-group={b.group}>{b.name}</option>
                    ))}
                </select>
            </div>
        </div>

        <!-- CONTAINER FOR FORMS -->
