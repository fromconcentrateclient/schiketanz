---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Thank You | Schiketanz Real Estate">
  <div class="container mx-auto px-4 h-[60vh] flex flex-col items-center justify-center text-center">
    <div class="bg-green-100 p-4 rounded-full mb-6">
        <svg class="w-12 h-12 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/></svg>
    </div>
    <h1 class="font-century font-bold text-4xl text-gray-800 mb-4">Submission Received</h1>
    <p class="text-gray-600 text-lg mb-8 max-w-md">Thank you. Your Pre-Authorized Debit form and void cheque have been securely transmitted to our office.</p>
    <a href="/" class="px-6 py-3 bg-[var(--color-schiketanz-red)] text-white font-bold rounded hover:bg-red-700 transition-colors">Return Home</a>
  </div>
</Layout>